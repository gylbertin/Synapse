<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/fundoprov"
    tools:context=".MainActivity">

    <!-- mudar o entre fonte synapse -->
    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="CADASTRE-SE"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <!-- usuario achar icon de user -->
    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="20dp"
        android:hint="UsuÃ¡rio"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="20dp"
        android:hint="E-mail"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <!-- achar o icon senha -->
    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#30ffffff"
        android:hint="Senha"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableLeft="@drawable/senha"
        android:drawablePadding="20dp" />

    <EditText
        android:id="@+id/txtConfSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#30ffffff"
        android:hint="Confirmar Senha"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableLeft="@drawable/senha"
        android:drawablePadding="20dp" />

    <!-- botao de entrar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cadastroBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0000FF"
        android:text="CADASTRAR"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="100dp" />

    <!-- esqueci a senha link(?) -->

    <TextView
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:text="Ou acesse com"
        android:textColor="#888888" />

    <!--botao google -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/googleLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="#222222"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:icon="@drawable/logingoogle"
        android:stateListAnimator="@null"

        android:text="Cadastrar com o Google"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="100dp" />

    <!-- botao de Cadastr -->
</LinearLayout>