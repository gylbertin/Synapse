<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo principal dentro de ScrollView (caso queira rolagem futura) -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_reverse"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="0dp"
        >

        <TextView
            android:id="@+id/textPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pergunta carregando..."
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="60dp"
            />

        <RadioGroup
            android:id="@+id/grupoAlternativas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="5dp"
            android:background="@drawable/fundo_dias_semana"
            />

        <Button
            android:id="@+id/botaoConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0500FF"
            />

        <Button
            android:id="@+id/botaoProxima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Próxima"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0500FF"
            />
    </LinearLayout>

    <!-- BottomNavigationView fixo no rodapé -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_gravity="bottom"
        android:background="#121212"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_icon_color"
        app:itemPaddingTop="0dp"
        app:itemPaddingBottom="0dp"
        />
</FrameLayout>