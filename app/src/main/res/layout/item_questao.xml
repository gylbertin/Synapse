<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerQuestao"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_redacao_background"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/txtMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matéria: Matemática"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtConteudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conteúdo: Porcentagem"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/txtAcertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acertos: 8 de 10"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:paddingTop="2dp"/>
</LinearLayout>